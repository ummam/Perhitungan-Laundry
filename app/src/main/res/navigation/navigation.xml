<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/awal">

    <fragment
        android:id="@+id/awal"
        android:name="org.d3if4020.laundryassesment.ui.hitung.Awal"
        android:label="Awal"
        tools:layout="@layout/fragment_awal">
        <action
            android:id="@+id/action_awal_to_saranFragment"
            app:destination="@id/saranFragment" />
        <action
            android:id="@+id/action_awal_to_aboutFragment"
            app:destination="@id/aboutFragment" />
        <action
            android:id="@+id/action_awal_to_historiFragment"
            app:destination="@id/historiFragment" />
    </fragment>
    <fragment
        android:id="@+id/saranFragment"
        android:name="org.d3if4020.laundryassesment.ui.SaranFragment"
        android:label="SaranFragment"
        tools:layout="@layout/fragment_saran"/>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="org.d3if4020.laundryassesment.ui.AboutFragment"
        android:label="AboutFragment"
        tools:layout="@layout/fragment_about"/>
    <fragment
        android:id="@+id/historiFragment"
        android:name="org.d3if4020.laundryassesment.ui.histori.HistoriFragment"
        android:label="@string/history"
        tools:layout="@layout/fragment_histori"/>
</navigation>